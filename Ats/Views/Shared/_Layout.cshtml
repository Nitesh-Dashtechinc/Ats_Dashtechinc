<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title-DashAts</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.js"></script>
	<script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap-datepicker/css/bootstrap-datepicker.css" rel="stylesheet" />
    <link href="~/Content/toastr/css/toastr.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .container {
            padding-top: 6%;
        }

        .navbar-brand {
            margin-top: -8px;
            margin-bottom: -7px;
        }

        .bg-black {
            background-color: #1e1f21 !important;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-black">
        <a class="navbar-brand" href="@Url.Action("Register")"><img src="~/Content/image/logo.png" style="height:60px; width:auto" /></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">@Html.ActionLink("Pre-Interview", "Register", "Home", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link bg-black" })</li>
                @if (Request.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link bg-black" href="@Url.Action("Index")">List<span class="sr-only"></span></a>
                    </li>
                }
            </ul>
            @Html.Partial("_LoginPartial")

        </div>
    </nav>
    <div class="container">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
